<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="User Data">
        <Preference
            app:key="dataUser"
            app:title="Change Data"
            app:summary="Change your age and height"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="Notification Settings">
        <SwitchPreference
            app:key="notification"
            app:title="Notifications"
            app:defaultValue="true"/>

        <SwitchPreference
            app:key="vibrate"
            app:title="Notification Vibration"
            app:defaultValue="true"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="Report">
        <Preference
            app:key="email"
            app:title="Send feedback"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="Account">
        <Preference
            app:key="delete"
            app:title="Delete Account"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="About">
        <Preference
            app:key="version"
            app:title="Version"
            app:summary="@string/version"/>

        <Preference
            app:key="developer"
            app:title="Developer"
            app:summary="Filipe Santos"/>
    </PreferenceCategory>

</PreferenceScreen>